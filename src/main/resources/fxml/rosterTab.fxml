<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.theintelligentone.fgotracker.ui.valuefactory.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<Tab xmlns="http://javafx.com/javafx"
     xmlns:fx="http://javafx.com/fxml"
     fx:controller="com.github.theintelligentone.fgotracker.ui.controller.RosterController"
     text="Servants"
     closable="false">
    <VBox>
        <TableView fx:id="rosterTable" editable="true">
            <columns>
                <TableColumn text="General Info">
                    <columns>
                        <TableColumn text="Name" fx:id="nameColumn">
                            <cellValueFactory>
                                <ServantNameValueFactory/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="rarityColumn" text="R">
                            <cellValueFactory>
                                <PropertyValueFactory property="rarity"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="classColumn" text="Class">
                            <cellValueFactory>
                                <ServantClassValueFactory/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="attributeColumn" text="Attr.">
                            <cellValueFactory>
                                <ServantAttributeValueFactory/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn fx:id="deckColumn" text="Deck">
                    <columns>
                        <TableColumn text="C1">
                            <cellValueFactory>
                                <DeckColumnValueFactory fx:value="1"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="C2">
                            <cellValueFactory>
                                <DeckColumnValueFactory fx:value="2"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="C3">
                            <cellValueFactory>
                                <DeckColumnValueFactory fx:value="3"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="C4">
                            <cellValueFactory>
                                <DeckColumnValueFactory fx:value="4"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="C5">
                            <cellValueFactory>
                                <DeckColumnValueFactory fx:value="5"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn fx:id="npColumn" text="NP">
                    <columns>
                        <TableColumn text="Type">
                            <cellValueFactory>
                                <PropertyValueFactory property="npType"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Target">
                            <cellValueFactory>
                                <PropertyValueFactory property="npTarget"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Damage">
                            <cellValueFactory>
                                <ServantNpDamageValueFactory/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Level" editable="true" fx:id="npDmgColumn">
                            <cellValueFactory>
                                <PropertyValueFactory property="npLevel"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn text="Levels">
                    <columns>
                        <TableColumn fx:id="levelColumn" text="Lvl">
                            <cellValueFactory>
                                <PropertyValueFactory property="level"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="ascColumn" text="Asc"/>
                        <TableColumn fx:id="bondColumn" text="B">
                            <cellValueFactory>
                                <PropertyValueFactory property="bondLevel"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="skill1Column" text="S1">
                            <cellValueFactory>
                                <PropertyValueFactory property="skillLevel1"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="skill2Column" text="S2">
                            <cellValueFactory>
                                <PropertyValueFactory property="skillLevel2"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="skill3Column" text="S3">
                            <cellValueFactory>
                                <PropertyValueFactory property="skillLevel3"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn text="Fou">
                    <columns>
                        <TableColumn fx:id="atkColumn" text="ATK">
                            <cellValueFactory>
                                <PropertyValueFactory property="fouAtk"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="hpColumn" text="HP">
                            <cellValueFactory>
                                <PropertyValueFactory property="fouHp"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
            </columns>
        </TableView>
        <Button text="temp"/>
    </VBox>
</Tab>
