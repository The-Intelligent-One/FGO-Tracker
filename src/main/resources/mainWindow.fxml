<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.github.theintelligentone.fgotracker.ui.MainController">
    <MenuBar>
        <Menu>
            <graphic>
                <Label onMouseClicked="#addNewRow" text="Add New Row"/>
            </graphic>
        </Menu>
        <Menu>
            <graphic>
                <Label onMouseClicked="#add10NewRow" text="Add 10 New Rows"/>
            </graphic>
        </Menu>
        <Menu>
            <graphic>
                <Label onMouseClicked="#importFromCsv" text="Import"/>
            </graphic>
        </Menu>
    </MenuBar>
    <TabPane>
        <fx:include fx:id="rosterTab" source="rosterTab.fxml"/>
    </TabPane>
</VBox>