<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.theintelligentone.fgotracker.ui.valuefactory.roster.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.github.theintelligentone.fgotracker.ui.controller.PlannerController">
    <TableView fx:id="sumTable" editable="true">
        <columns>
            <TableColumn fx:id="label"/>
            <TableColumn fx:id="sumCurrent"/>
            <TableColumn fx:id="sumDesired">
                <cellValueFactory>
                    <PropertyValueFactory property="label"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <TableView fx:id="plannerTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name">
                <cellValueFactory>
                    <UserServantNameValueFactory/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Current" fx:id="current">
                <columns>
                    <TableColumn fx:id="level" text="LvL">
                        <cellValueFactory>
                            <UserServantValueFactory property="level"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="skill1" text="S1">
                        <cellValueFactory>
                            <UserServantValueFactory property="skillLevel1"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="skill2" text="S2">
                        <cellValueFactory>
                            <UserServantValueFactory property="skillLevel2"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="skill3" text="S3">
                        <cellValueFactory>
                            <UserServantValueFactory property="skillLevel3"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableColumn>
            <TableColumn text="Desired" fx:id="desired">
                <columns>
                    <TableColumn text="LvL">
                        <cellValueFactory>
                            <UserServantValueFactory property="desLevel"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="S1">
                        <cellValueFactory>
                            <UserServantValueFactory property="desSkill1"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="S2">
                        <cellValueFactory>
                            <UserServantValueFactory property="desSkill2"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="S3">
                        <cellValueFactory>
                            <UserServantValueFactory property="desSkill3"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
