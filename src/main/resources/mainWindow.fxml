<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.github.theintelligentone.fgotracker.ui.MainWindow"
         prefHeight="400.0" prefWidth="600.0">
    <Tab text="Servants">
        <TableView fx:id="rosterTable">
            <columns>
                <TableColumn text="General Info">
                    <columns>
                        <TableColumn text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="R">
                            <cellValueFactory>
                                <PropertyValueFactory property="rarity"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Class">
                            <cellValueFactory>
                                <PropertyValueFactory property="className"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Attr.">
                            <cellValueFactory>
                                <PropertyValueFactory property="attribute"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn text="NP">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Lvl">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Asc">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="S1">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="S2">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="S3">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Bond Lvl">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Fou ATK">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Fou HP">
                    <cellValueFactory>
                        <PropertyValueFactory property="level"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </Tab>
</TabPane>